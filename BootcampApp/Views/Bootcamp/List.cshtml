 @model List<UserInfo>
 @{
   ViewBag.Title = "Katılım Listesi";
 }

 <main class="text-center">
    <h1>Toplantı Katılım Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Katılım Durumu</td>
            </tr>
        </thead>
        <tbody>

                @{int i =0;}
            @foreach(var user in Model){
                var durum = user.WillAttend == true ? "Evet":"Hayır";
                var ClassName = user.WillAttend == true ? "table-success":"table-danger";

                @if(user.WillAttend == true){
                    i++;
                }

            <tr class="@ClassName">
                <td>@user.Name</td>
                <td>@durum</td>
                <td>
                    <a  class="btn btn-sm btn-outline-primary" href="/bootcamp/details/@user.Id">Detay</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <span>Katılımcı Sayısı: @i</span>
        </div>
    </div>
</main>