 @model UserInfo;
 @{
   ViewBag.Title = "Başvuru Formu";
 }
<h1 class="h4 text-center">Toplantı Katılım Formu</h1>

<form method="post" action="/Bootcamp/Apply" novalidate>
<div asp-validation-summary="All"></div>
  <div class="mb-3">
    <label asp-for="Name" class="form-label">Ad Soyad</label>
    <input asp-for="Name" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Phone" class="form-label">Telefon Numarası</label>
    <input asp-for="Phone" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Email" class="form-label">Email</label>
    <input asp-for="Email" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="WillAttend" class="form-label">Katılım Kurumu</label>
    <select asp-for="WillAttend" class="form-select">
      <option value="">Seçiniz</option>
      <option value="true">Evet</option>
      <option value="false">Hayır</option>
    </select>
  </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>